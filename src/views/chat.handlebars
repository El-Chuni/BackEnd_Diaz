<div>
    <h4>Chat de MongoDB con WebSocket</h4>

    <div id="log">
        {{#each messages}}
        <p>{{this.user}}: {{message}}</p>
        {{/each}}
    </div>

    {{#if adminView}}
        <div>
            <p>Como admin, no estás autorizado para escribir, esto es para usuarios.</p>
        </div>
    {{#else}}
        <div class="form-group">
            <label for="nombreUsuario">Nombre de usuario:</label>
            <input type="text" class="form-control" id="nombreUsuario" placeholder="Ingresa tu nombre de usuario">
        </div>

        <div class="form-group">    
            <label for="textoEntrada">Mensaje:</label>
            <input type="text" class="form-control" id="textoEntrada" placeholder="Escribe tu mensaje aquí">
        </div>
    {{#/if}}
    

</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/messages.js"></script>
