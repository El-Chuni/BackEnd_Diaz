<div>
    <h4>Chat de MongoDB con WebSocket</h4>

    <div id="log">
        {{#each messages}}
        <p>{{this.user}}: {{this.message}}</p>
        {{/each}}
    </div>

    <div class="form-group">
        <label for="nombreUsuario">Nombre de usuario:</label>
        <input type="text" class="form-control" id="nombreUsuario" placeholder="Ingresa tu nombre de usuario">
    </div>

    <div class="form-group">    
        <label for="textoEntrada">Mensaje:</label>
        <input type="text" class="form-control" id="textoEntrada" placeholder="Escribe tu mensaje aquÃ­">
    </div>

    <button id="enviarMensaje" class="btn btn-primary">Enviar</button>

</div>


<script src="/socket.io/socket.io.js"></script>
<script src="/js/messages.js"></script>
