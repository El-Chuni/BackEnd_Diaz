{{#if isValid}}
<div>
  {{#each docs}}
    <div class="user">
        <div>
          <h4>{{this.first_name}} {{this.last_name}}</h4>
          <p>Email: ${{this.email}} ARG</p>
          <p>Rol: {{this.role}}</p>
          {{#if isAdmin}}
          <button class="change-role" data-uid="{{this._id}}">Ascender/Degradar usuario</button>
          <button class="delete-user" data-uid="{{this._id}}">Borrar usuario</button>
          {{/if}}
        </div>
    </div>
    <br/>
  {{/each}}
</div>
<br/>
<div>
  {{#if hasPrevPage}}
      <a href={{this.prevLink}}><< Anterior</a>
  {{/if}}
    &nbsp;
  {{this.page}}
    &nbsp;
    {{#if hasNextPage}}
      <a href={{this.nextLink}}>Siguiente >></a>
  {{/if}}
</div>   
{{else}}
  <h1>No hay usuarios para mostrar</h1>
  <p>(O tal vez intentaste ver la lista con una p√°gina inexistente)</p>
{{/if}}

<script src="/js/usersList.js"></script>